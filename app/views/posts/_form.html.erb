
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <a href="#" class="logo">
        <%= image_tag "Instagrammi.svg" %>
      </a>
      <div class="menu">
        <a href="#" class="active">
          <span class="icon">
            <i class="ri-home-2-line"></i>
          </span>
          Accueil
        </a>
        <!-- Ajoutez d'autres liens de la barre latérale ici -->
      </div>
    </div>

    <!-- Contenu principal -->
    <div class="main-content">
      <!-- Formulaire -->
      <div class="form-container">
        <%= form_with(model: post, html: { class: "form-container" }) do |form| %>
          <% if post.errors.any? %>
            <div style="color: red">
              <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

              <ul>
                <% post.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-field">
            <%= form.label :titre, "Titre", class: "form-label" %>
            <%= form.text_field :titre, class: "form-input", placeholder: "Ajouter un titre" %>
          </div>

          <div class="form-field">
            <%= form.label :description, "Description", class: "form-label" %>
            <%= form.text_field :description, class: "form-input", placeholder: "Ajouter une description" %>
          </div>

          <div class="form-field">
            <%= form.label :image, "URL de l'image", class: "form-label mb-2" %>
            <%= form.text_field :image, class: "form-input", placeholder: "Insérez l'URL de votre image" %>
          </div>

          <div class="form-field">
            <%= form.submit "Publier", class: "form-submit" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
